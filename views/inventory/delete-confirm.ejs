<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/navigation') %>
  
  <main>
    <section class="delete-confirm">
      <h1><%= title %></h1>
      <%- messages() %>
      <p class="notice">Confirm Deletion - The delete is permanent.</p>

      <form action="/inv/delete" method="post">
        <input type="hidden" name="inv_id" value="<%= inv_id %>">
        
        <div class="form-group">
          <label for="inv_make">Make:</label>
          <input type="text" name="inv_make" id="inv_make" 
                 value="<%= inv_make %>" readonly>
        </div>

        <div class="form-group">
          <label for="inv_model">Model:</label>
          <input type="text" name="inv_model" id="inv_model" 
                 value="<%= inv_model %>" readonly>
        </div>

        <div class="form-group">
          <label for="inv_year">Year:</label>
          <input type="text" name="inv_year" id="inv_year" 
                 value="<%= inv_year %>" readonly>
        </div>

        <div class="form-group">
          <label for="inv_price">Price:</label>
          <input type="text" name="inv_price" id="inv_price" 
                 value="<%= inv_price %>" readonly>
        </div>

        <button type="submit" class="btn-delete">Delete Vehicle</button>
        <a href="/inv/" class="btn-cancel">Cancel</a>
      </form>
    </section>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>